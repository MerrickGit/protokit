{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "globals": {
    "__DEV__": true,
    "__ENV__": true,
    "__dirname": true
  },
  "rules": {
    "no-console": "warn",
    "max-len": [
      2,
      {
        "code": 100
      }
    ]
  },
  "plugins": ["react", "@typescript-eslint"]
}
